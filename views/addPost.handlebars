<section class="sections add-post">
    <p id="login-header">Create a new post</p>
    <form id="post-form" action="/addPost" method="POST" autocomplete="off">
        <label class="post-label" for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <br>
        <label type="select" class="post-label" for="topics">Topic:</label>
        <select name="topics" id="topics" required>
            {{#each topics as |topic| }}
            <option value="{{topic.name}}">{{topic.name}}</option>
            {{/each}}
        </select>
        <br>
        <label class="post-label" for="post">Post content:</label>
        <input type="text" id="post" name="post" required>
        <br>
        <section id="post-submit">
            {{#if message}}
                <p class="error-message">{{ message }}</p>
            {{/if}}
            <button id="post-submit" type="submit">Post</button>
        </section>
        
    </form>
</section>