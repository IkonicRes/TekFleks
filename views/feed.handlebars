<aside class="sidebar">
<nav id="sidebar-nav">
    <ul>
        {{!-- here we will put some social things, maybe the highest posts? --}}
    </ul>
</nav>
</aside>  
{{#if user}}
  <!-- Display feed content for authenticated users -->
    <article class="sections random-post">
        <section id="feed">
            <h2>
                Feed
            </h2>
            <button type="button" onclick="redirectToAddPost()" id="post-button">Create Post</button>
        </section>
        {{#each posts as |post|}}
        <article class="post subsections">
            <h3>{{post.topic.name}}</h3>
            <section class="posts">
                <h4>{{post.title}}</h4>
                <p>{{post.text_content}}</p>
            </section>
        </article>
        {{/each}}
    </article>
{{else}}
<section class="sections reject">
  <div class="rejection-text">
    <p>Please log in or sign up to access this content.</p>
    <br>
    <a href="/signup">Signup</a></p>
  </div>
  <br>
  <p>Already have an account? <a href="/login">Login</a></p>
  <!-- Display message for unauthenticated users -->
</section>

{{/if}}
