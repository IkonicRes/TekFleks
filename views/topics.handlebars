{{#if user}}
    <aside class="sidebar">
        <nav id="sidebar-nav">
            <ul>
                {{#each topics as |topic|}}
                <li><a href="#{{topic.name}}">{{topic.name}}</a></li>
                {{/each}}
            </ul>
        </nav>
    </aside>  
    <section class="topic-list sections">
        {{#each topics as |topic|}}
        <article class="topic">
            <h3 id="{{topic.name}}">{{topic.name}}</h3>
            <ul class="post-list">
                {{#each topic.posts as |post|}} <!-- Iterate over the posts of the current topic -->
                <div class="subsections">
                    <h4>{{post.title}}</h4>
                </div>
                {{/each}}
            </ul>
        </article>
        {{/each}}
    </section>
{{else}}
<section class="sections reject">
  <div class="rejection-text">
    <p>Please log in or sign up to access this content.</p>
    <br>
    <a href="/signup">Signup</a></p>
  </div>
  <br>
  <p>Already have an account? <a href="/login">Login</a></p>
  <!-- Display message for unauthenticated users -->
</section>
{{/if}}
